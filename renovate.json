{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "nix"
      ],
      "matchDepNames": [
        "nixpkgs"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "nix"
      ],
      "groupName": "nix flake inputs",
      "automerge": true,
      "matchDepNames": [
        "!nixpkgs"
      ]
    }
  ]
}
